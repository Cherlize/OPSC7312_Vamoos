<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/txtUserProfileTop"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="#4FB7C1"
        android:backgroundTint="#B24FB7C1"
        android:editable="false"
        android:fontFamily="sans-serif-black"
        android:gravity="center|center_horizontal"
        android:text="User Profile"
        android:textColor="#000000"
        android:textColorHighlight="#BC0245A3"
        android:textColorLink="#0245A3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/toggleSystem"
        android:layout_width="309dp"
        android:layout_height="48dp"
        android:background="#71D7E1"
        android:backgroundTint="#BDF1F6"
        android:backgroundTintMode="screen"
        android:buttonTint="#0245A3"
        android:checked="true"
        android:text="Use metric system"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="143dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/toggleSystem"
        app:layout_constraintEnd_toStartOf="@+id/profilePic"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserProfileTop"
        app:layout_constraintVertical_bias="0.63" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="155dp"
        android:layout_height="131dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserProfileTop"
        app:srcCompat="@drawable/profilepicture" />

    <Button
        android:id="@+id/btnBacktomap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="#0245A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleSystem"
        app:layout_constraintVertical_bias="0.044" />

</androidx.constraintlayout.widget.ConstraintLayout>